<div class="container">
  <div class="row">
    <div class="col">
      <h1>index of food</h1>
      <%= link_to "Create Food", new_food_path, class:"btn btn-success" %>
    </div>
    <div class="col">
     <table>
       <thead>
         <tr>
           <th>name</th>
           <th>introduction</th>
           <th colspan="3"></th>
         </tr>
       </thead>
       <tbody>
         <% @foods.each do |food| %>
         <tr>
           <td>
             <%= food.name %>
           </td>
           <td>
             <%= food.body %>
           </td>
           <td>
             <%= link_to "Show", food_path(food.id) ,class:"btn btn-primary" %>
           </td>
           <td>
             <%= link_to "Destroy", eat_path class:"btn btn-primary" %>
           </td>
         </tr>
         <% end %>
       </tbody>
     </table>
    </div>
  </div>
</div>